#include <stdio.h.>
#include <stdlib.h>
#include <string.h>
int main(){
    char palavra[21], inversa[21];
    printf("Palavra:");
    gets(palavra);
    int i, j =0;
    int t = strlen(palavra);
    for(i=t-1; i>=0 ; i--){
        inversa[j] = palavra[i];
        j++;
    }
    inversa[j] = '\0';
    printf("Inversa:");
    puts(inversa);
    system("pause");
    return 0;
}
