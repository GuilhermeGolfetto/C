#include <stdio.h>
#include <stdlib.h>
/*Criar uma função que receba como parâmetro um número inteiro e 
retorne o fatorial deste número. 
Criar um programa que leia um número inteiro, 
chame a função que calcula o fatorial e apresente 
o valor de retorno da função.*/
int fatorial(int num){
    int i, res;
    res = 1;
    for(i=num;i>0;i--){
        res*=i;    
    }
    return res;
}
int main(){
    int n,f;
    printf("Digite um numero:");
    scanf("%d",&n);
    f = fatorial(n);
    printf("O Valor de %d ! = %d \n",n,f);
    system("pause");
    return 0;
}
