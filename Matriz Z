#include <stdio.h>
#include <stdlib.h>
/*fazer um programa que preencha uma matriz n.n (maz 50) com as letras do
 alfabeto na sequencia A a Z na tela, quando o alfabeto zerar deve-se recoema√ßr*/
/*saida:
 a b c d e
 f
 g
 h
 i j k l m */

#define MAX 50

char proximaLetra(int posicao) {
	char alfabeto[] = { 'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k',
			'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x',
			'y', 'z' };
	return alfabeto[posicao];
}

void mostrarMatriz(int tam) {
	int i, j, posicao = 0;
	for (i = 0; i < tam; i++) {
		for (j = 0; j < tam; j++) {
			if (i == 0 || j == (tam - 1) - i || i == tam - 1) {
				if (posicao >= 26) {
					posicao = 0;
				}
				printf("%c \t", proximaLetra(posicao));
				posicao++;
			} else {
				printf(" \t");
			}
		}
		printf("\n");
	}

}

int main(int argc, char *argv[]) {
	int tam = 0;
	printf("digite o tamanho do Z:");
	scanf("%d", &tam);
	mostrarMatriz(tam);
	system("PAUSE");
	return 0;
}
